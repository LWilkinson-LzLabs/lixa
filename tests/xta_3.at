AT_BANNER([XTA: Suspend and Resume])

# This case tests use only monkey RM
# XA Suspend/Resume

# First step:
# - create a new transaction (XID)
# - suspend the transaction for migrate
AT_SETUP([XTA/3.0/0.0 Suspend])
AT_CHECK([if test "$LIXA_XTA" = "no"; then exit 77; fi])
AT_DATA([monkey1s.conf],
[[# monkey R.M. config
xa_open/0
xa_start/0
xa_end/0
xa_close/0
]])
AT_DATA([monkey2s.conf],
[[# monkey R.M. config
xa_open/0
xa_start/0
xa_end/0
xa_close/0
]])
AT_CHECK([export LIXA_PROFILE=CASE_PROF_0004 ; lixa_test_exec.sh reset start case0103 0 1 1 0 $TESTS_TMP_FILE1 2>&1], [0], [ignore], [ignore])
AT_CLEANUP

# Second step:
# - resume the previous transaction (XID)
# - suspend again
AT_SETUP([XTA/3.0/0.1 Resume and Suspend])
AT_CHECK([if test "$LIXA_XTA" = "no"; then exit 77; fi])
AT_DATA([monkey1s.conf],
[[# monkey R.M. config
xa_open/0
xa_start/0
xa_end/0
xa_close/0
]])
AT_DATA([monkey2s.conf],
[[# monkey R.M. config
xa_open/0
xa_start/0
xa_end/0
xa_close/0
]])
AT_CHECK([export LIXA_PROFILE=CASE_PROF_0004 ; lixa_test_exec.sh noreset none case0103 1 0 1 0 $TESTS_TMP_FILE1 2>&1], [0], [ignore], [ignore])
AT_CLEANUP

