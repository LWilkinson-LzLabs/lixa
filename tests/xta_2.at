[[# monkey R.M. config
xa_open/0
xa_start/0
xa_end/0
]])
AT_CHECK([export LIXA_PROFILE=CASE_PROF_0007 ; export LIXA_CRASH_POINT=11 ; lixa_test_exec.sh noreset none case0102 0 1 1 0 $TESTS_TMP_FILE1 2>&1], [134], [ignore], [ignore])
