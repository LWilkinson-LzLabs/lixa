# should reply XAER_NOTA due to single phase commit interrupted before xa_commit
#
xa_commit/-4
xa_start/0
xa_end/0
xa_commit/0
xa_close/0
]])
else
AT_DATA([monkey1s.conf],
[[# monkey R.M. config
xa_open/0
xa_start/0
xa_end/0
xa_commit/0
xa_close/0
]])
