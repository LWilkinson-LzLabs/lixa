AT_BANNER([XTA for Java: Branch support])

AT_SETUP([XTA Java/4.0/0.0 Superior Branch does not exist])
AT_CHECK([if test "$LIXA_XTA_JAVA" = "no"; then exit 77; fi])
# just start the state server
AT_CHECK([lixa_test_exec.sh reset start true], [0], [ignore], [ignore])
AT_DATA([monkey1s.conf],
[[# monkey R.M. config
xa_start/0
xa_end/0
xa_prepare/0
xa_commit/0
]])
# create superior branch
AT_CHECK([export LIXA_PROFILE=CASE_PROF_0027 ; lixa_test_exec.sh noreset none case4105 0 1 0 $TESTS_TMP_FILE1 1 2>&1], [0], [ignore], [ignore])
# create subordinate branch: xta_transaction_branch must return 11:
# #define LIXA_RC_NO_SUPERIOR_BRANCH      +11
AT_CHECK([export LIXA_PROFILE=CASE_PROF_0027 ; lixa_test_exec.sh noreset none case4105 1 1 11 $TESTS_TMP_FILE1 1 2>&1], [0], [ignore], [ignore])
AT_CLEANUP

