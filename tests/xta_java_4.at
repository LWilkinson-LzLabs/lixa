AT_SETUP([XTA Java/4.0/1.0 Async branch and commit])
AT_CHECK([if test "$LIXA_XTA_JAVA" = "no"; then exit 77; fi])
AT_CHECK([if test "$HAVE_POSTGRESQL" = "no" -o "$HAVE_MYSQL" = "no" -o "$HAVE_ORACLE" = "no"; then exit 77; fi])
# create a FIFO object for communication between superior and subordinate
# process
AT_CHECK([mkfifo tmp_fifo1], [0], [ignore], [ignore])
AT_CHECK([mkfifo tmp_fifo2], [0], [ignore], [ignore])
AT_DATA([insert],
[[timeout 7 lixa_test_exec.sh noreset none case4104 0 1 1 1 0 tmp_fifo1 foo monkey1s.conf
timeout 7 lixa_test_exec.sh noreset none case4104 1 1 2 1 0 tmp_fifo2 tmp_fifo1 monkey2s.conf
timeout 7 lixa_test_exec.sh noreset none case4104 2 1 3 1 0 foo tmp_fifo2 monkey3s.conf
]])
AT_DATA([delete],
[[timeout 7 lixa_test_exec.sh noreset none case4104 0 0 1 1 0 tmp_fifo1 foo monkey1s.conf
timeout 7 lixa_test_exec.sh noreset none case4104 1 0 2 1 0 tmp_fifo2 tmp_fifo1 monkey2s.conf
timeout 7 lixa_test_exec.sh noreset none case4104 2 0 3 1 0 foo tmp_fifo2 monkey3s.conf
]])
AT_DATA([monkey1s.conf],
[[# monkey R.M. config
xa_start/0
xa_end/0
xa_prepare/0
xa_commit/0
]])
AT_DATA([monkey2s.conf],
[[# monkey R.M. config
xa_start/0
xa_end/0
xa_prepare/0
xa_commit/0
]])
AT_DATA([monkey3s.conf],
[[# monkey R.M. config
xa_start/0
xa_end/0
xa_prepare/0
xa_commit/0
]])
AT_CHECK([export LIXA_PROFILE=CASE_PROF_0027 ; lixa_test_group.sh insert], [0], [ignore], [ignore])
AT_CHECK([export LIXA_PROFILE=CASE_PROF_0027 ; lixa_test_group.sh delete], [0], [ignore], [ignore])
AT_CHECK([rm tmp_fifo1], [0], [ignore], [ignore])
AT_CHECK([rm tmp_fifo2], [0], [ignore], [ignore])
AT_CLEANUP

